{% extends "YepsuaThemeBundle::main_layout.html.twig" %}

{% block layout_ajax_status %}
    {% ajax_status onstart="$.blockUI()"
          onsuccess="$.unblockUI()"
          oncomplete="$.unblockUI();$('.crud-btn-submit').removeAttr('disabled')"
          onerror="$.unblockUI()"
          for="document" %}
{% endblock %}   

{% block layout_title  %}
    {% block title 'Utopia | Sistema de Control de Estudios' %}
{% endblock %}

{% block layout_include %}
    {% include 'YepsuaSmarTwigBundle::smartwigAssets.html.twig' %}
    {% include 'YepsuaGeneratorBundle::yepsuaGeneratorAssets.html.twig' %}
    {% block include '' %}
{% endblock %}

{% block layout_main_menu %}
    {{ knp_menu_render(['mainMenu','core_menu'], {'allow_safe_labels': true}) }}
{% endblock %}

{% block layout_breadcrumb %}
<li><a href="#"><b>Inicio</b></a></li>
{% block breadcrumb ''%}
{% endblock %}
    
{% block layout_after_breadcrumb %}
    <b>Bienvenido: {{ app.user.username }}<b>
    {% block after_breadcrumb ''%}
{% endblock %}
    
{% block layout_left_content %}
    <div align="center">
        <img class="logo-image" width="100" height="100" src="http://1.bp.blogspot.com/_mDsYfbmJovc/TBBV6c0t74I/AAAAAAAAAGA/vPEC9rFZaaw/s320/LOGO%2BCUC%2Bn.JPG" alt="logo"/>
        <hr/>
        {% ui_datepicker inline=true %}
        Lunes 20 de Noviembre de 2014              
        {% block left_content '' %}
    </div>
{% endblock %}
    
{% block layout_content %}
    {% block content ''%}
{% endblock %}
    
{% block layout_footer_content %}
    {% block footer_content '' %}
{% endblock %}