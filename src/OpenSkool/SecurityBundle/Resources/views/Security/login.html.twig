{% extends "YepsuaThemeBundle::auth_layout.html.twig" %}

{% block layout_panel_title %}
<div class="panel-heading"><span class="glyphicon glyphicon-book"></span> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</div>
{% endblock %}


{% block layout_form %}
{% if error %}
<div class="col-md-12">
    <div class="panel panel-danger">
        <div class="panel-heading">
            <h3 class="panel-title">{{ error|trans({}, 'FOSUserBundle') }}</h3>
        </div>
    </div>
</div>    
{% endif %}

<div class="col-md-12">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="input-group">
            <label for="username" class="input-group-addon"><span class="glyphicon glyphicon-user"></span></label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" />
        </div>
        <br/>
        <div class="input-group">
            <label for="password" class="input-group-addon"><span class="glyphicon glyphicon-asterisk"></span></label>
            <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" />
        </div>
        <br/>
        <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <div style="float:right">
            <button  type="submit" id="_submit" class="btn btn-default">
                <span class="glyphicon glyphicon-log-in"></span>
                {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}
            </button>
        </div>
    </form>
</div>
{% endblock layout_form %}
{% ui_effect for=".panelAuth" effect="slide" condition="typeof jQuery != 'undefined'" callback=js_function("$('body').find('div:first').hide();$('body').append($('#authContainer'))") %}