<div class="container-fluid" style="width:99%">
  <div class="row ui-state-error-text">
      <div class="col-md-12">
          {{ form_errors(form) }}
      </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="control-group">
        <label class="control-label" for="textinput">{{ form_label(form.instituto) }}:</label>
        <div class="controls">
          {{ form_widget(form.instituto) }}
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="control-group">
        <label class="control-label" for="textinput">{{ form_label(form.carrera) }}:</label>
        <div class="controls">
          {{ form_widget(form.carrera) }}
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- Text input-->
      <div class="control-group">
        <label class="control-label" for="textinput">{{ form_label(form.pensumPadre) }}:</label>
        <div class="controls">
          {{ form_widget(form.pensumPadre) }}
        </div>
      </div>
    </div>
  </div>
  {%  if form.CreatePlanEstudio is defined %}

  <div class="row">
    <div class="col-md-6">
        <div class="control-group">
            <label class="control-label" for="textarea">{{ form_label(form.CreatePlanEstudio) }}:</label>
            <div class="controls">
                {{ form_widget(form.CreatePlanEstudio, { 'attr': {'class': 'optCreatePlanEstudio', 'style' : 'width:auto'} } ) }}
            </div>
        </div>
    </div>
    <div class="col-md-6" >
      <div class="control-group" id="pnlCodigoPlanEstudio" style="display: none">
        <label class="control-label" for="textarea">{{ form_label(form.CodigoPlanEstudio) }}:</label>
        <div class="controls">
          {{ form_widget(form.CodigoPlanEstudio) }}
        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
      $('.optCreatePlanEstudio').on('change',function(){
          //if(($(this).is(':checked'))){
          $('#pnlCodigoPlanEstudio').toggle();
          //}
      });
  </script>

  {% endif %}
</div>
{{ form_rest(form) }}

