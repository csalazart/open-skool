{% ui_datepicker showButtonPanel=true builtIn='input[id="gs_user.passwordRequestedAt"]' datetime=true builtBy='input[id="gs_user.passwordRequestedAt"]' builtByEvent="ready" changeMonth=true changeYear=true %}  

